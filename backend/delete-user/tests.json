{
  "tests": [
    {
      "name": "Handle OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "Delete user without auth token returns 401",
      "method": "DELETE",
      "path": "/",
      "body": {
        "user_id": "123"
      },
      "expectedStatus": 401
    },
    {
      "name": "Delete user without user_id returns 400",
      "method": "DELETE",
      "path": "/",
      "headers": {
        "X-Auth-Token": "invalid-token"
      },
      "body": {
        "user_id": ""
      },
      "expectedStatus": 400
    },
    {
      "name": "Edit user without auth token returns 401",
      "method": "PUT",
      "path": "/",
      "body": {
        "user_id": "123",
        "new_name": "New Name"
      },
      "expectedStatus": 401
    }
  ]
}